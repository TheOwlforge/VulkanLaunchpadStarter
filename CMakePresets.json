{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "description": "Sets Ninja generator, compilers, build and install directory, debug build type",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/DebugLinux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_FLAGS_INIT": "-O2 -g0 -Wall -Wno-unknown-pragmas",
        "CMAKE_CXX_FLAGS_INIT": "-O2 -g0 -std=c++17 -Wall -Wno-unknown-pragmas"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Linux" ]
        },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "description": "Sets Ninja generator, compilers, build and install directory, debug build type",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ReleaseLinux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_FLAGS_INIT": "-O2 -g0 -Wall -Wno-unknown-pragmas",
        "CMAKE_CXX_FLAGS_INIT": "-O2 -g0 -std=c++17 -Wall -Wno-unknown-pragmas"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Linux" ]
        },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "debug-win",
      "displayName": "Windows Debug",
      "description": "Windows Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/Debug",
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio 22"
        }
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "CMAKE_C_FLAGS_INIT": "/Od /W3 /sdl /Y- /MP /Qpar",
        "CMAKE_CXX_FLAGS_INIT": "/Od /std:c++17 /W3 /sdl /Y- /MP /Qpar"
      }
    },
    {
      "name": "release-win",
      "displayName": "Windows Release",
      "description": "Windows Release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/Release",
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio 22"
        }
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "CMAKE_C_FLAGS_INIT": "/GL- /O2 /W3 /sdl /Y- /MP /Qpar",
        "CMAKE_CXX_FLAGS_INIT": "/GL- /O2 /std:c++17 /W3 /sdl /Y- /MP /Qpar"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug-win",
      "configurePreset": "debug-win"
    },
    {
      "name": "release-win",
      "configurePreset": "release-win"
    },
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug"
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release"
    }
  ]
}